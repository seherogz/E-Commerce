@model IEnumerable<Producer>;


@{
    ViewData["Title"] = "List of Producer"; // ViewData koleksiyonuna "Title" anahtarıyla "List of Actor" değerini ekler. sitemin başlığını veriyor.
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Bio)</th>
                    <th>İşlemler</th>
                </tr>

            </thead>

            <tbody>
                @foreach (var producer in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle"
                                 src="@producer.ProfilePictureUrl"
                                 alt="@producer.FullName"
                                 style="max-width:100px;" />
                        </td>
                        <td class="align-middle">@Html.DisplayFor(mi => producer.FullName) </td>
                        <td class="align-middle">@Html.DisplayFor(mi => producer.Bio)</td>
                        <td class="align-middle">

                            <div class="btn-group" role="group">
                                <!--butonları yan yana gruplamak için kullandık.-->
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@producer.Id"> <i class="bi bi-pencil-square"></i> Güncelle </a>
                                <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@producer.Id"> <i class="bi bi-eye"></i> Detay </a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@producer.Id"> <i class="bi bi-trash"></i> Sil </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Producers")

