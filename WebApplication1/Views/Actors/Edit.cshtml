@model Actor
@{
    ViewData["Title"] = "Register of Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>

            <h1>Aktör Güncelle </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="form-group mt-1 ">
                        <label asp-for="ProfilePictureUrl" class="control-Label"></label>
                        <input asp-for="ProfilePictureUrl" class="form-control" />
                        <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <img id="ProfilePictureUrlView" class="border-info rounded-circle" style="max-width=150px;" />

                    </div>
                    <div class="form-group mt-1">
                        <label asp-for="FullName" class="control-Label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-1">
                        <label asp-for="Bio" class="control-Label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Güncelle" class="btn btn-outline-success float-md-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Hepsini Göster</a>
                    </div>



                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>

        $(document).ready(function () {

            var output = document.getElementById('ProfilePictureUrlView'); // fotograf eklendıgınde fotografın ekranda  kalmasını sağlar
            output.src = $('#ProfilePictureUrl').val();
        });
        $('#ProfilePictureUrl').on('change', function () {

            var output = document.getElementById('ProfilePictureUrlView');// fotoğrafı kaydetmemden önce ön izleme saglamaktadır.
            output.src = $(this).val();
        });
    </script>

} 