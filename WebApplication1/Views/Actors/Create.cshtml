@model IEnumerable<Actor>;


@{
    ViewData["Title"] = "List of Actor"; // ViewData koleksiyonuna "Title" anahtarıyla "List of Actor" değerini ekler. sitemin başlığını veriyor.
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Bio)</th>
                    <th>İşlemler</th>
                </tr>

            </thead>

            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle"
                                 src="@actor.ProfilePictureUrl"
                                 alt="@actor.FullName"
                                 style="max-width=100px" />
                        </td>
                        <td class="align-middle">@Html.DisplayFor(mi => actor.FullName) </td>
                        <td class="align-middle">@Html.DisplayFor(mi => actor.Bio)</td>
                        <td class="align-middle">

                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@actor.Id"> <i class="bi bi-pencil-square"></i> Güncelle </a>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@actor.Id"> <i class="bi bi-eye"></i> Detay </a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@actor.Id"> <i class="bi bi-trash"></i> Sil </a>

                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>

</div>

<div style="position: fixed;  right:25px; bottom:25px" class="text-white">
    <a asp-controller="actors" asp-action="create" class="btn btn-success">
        <i class=" bi bi-circle"> Yeni Ekle </i>

    </a>


</div>