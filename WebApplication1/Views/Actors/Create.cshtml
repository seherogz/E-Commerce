@model Actor
@{
    ViewData["Title"] = "Register of Actor";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Yeni Aktör Ekle</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summarry="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-1">
                    <label asp-for="ProfilePictureUrl" class="control-label"></label>
                    <input asp-for="ProfilePictureUrl" class="form-control" />
                    <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>@* düz metin yazıyoruz span ile *@
                </div>
                <div class="form-group text-center" >
                    <img id="ProfilePictureUrlView" src="" />
                </div>
                <div class="form-group mt-1">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>@* düz metin yazıyoruz span ile *@
                </div>
                <div class="form-group mt-1">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>@* düz metin yazıyoruz span ile *@
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Kaydet" class="btn btn-outline-success float-md-end" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Hepsini Göster</a>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePictureUrlView');
            output.src = $('#ProfilePictureUrl').val();
        });

        $('#ProfilePictureUrl').on('change', function () {
            var output = document.getElementById('ProfilePictureUrlView');
            output.src = $(this).val();
        });
    </script>

}