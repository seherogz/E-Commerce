@*Define Model*@

@model IEnumerable<Cinema>;

@{
    ViewData["Title"] = "List of Cinemas"; // ViewData koleksiyonuna "Title" anahtarıyla "List of Actor" değerini ekler. sitemin başlığını veriyor.
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(ma => ma.Logo)</th>
                    <th>@Html.DisplayNameFor(ma => ma.Name)</th>
                    <th>@Html.DisplayNameFor(ma => ma.Description)</th>
                    <th>İşlemler</th>
                </tr>

            </thead>

            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle"
                                 src="@cinema.Logo"
                                 alt="@cinema.Name"
                                 style="max-width=100px" />
                        </td>
                        <td class="align-middle">@cinema.Name </td>
                        <td class="align-middle">@Html.DisplayFor(mi => cinema.Description)</td>
                        <td class="align-middle">

                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i> Güncelle </a>
                            <a class="btn btn-outline-info"> <i class="bi bi-eye"></i> Detay </a>
                            <a class="btn btn-outline-danger"> <i class="bi bi-trash"></i> Sil </a>

                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>

</div>

