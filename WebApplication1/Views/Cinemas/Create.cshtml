@model Cinema
@{
    ViewData["Title"] = "Register of Cinema";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Yeni Cinema Ekle</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summarry="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-1">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>@* düz metin yazıyoruz span ile *@
                    </div>
                    <div class="form-group text-center">
                        <img id="LogoView" src="" />
                    </div>
                    <div class="form-group mt-1">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>@* düz metin yazıyoruz span ile *@
                    </div>
                    <div class="form-group mt-1">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>@* düz metin yazıyoruz span ile *@
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Kaydet" class="btn btn-outline-success float-md-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Hepsini Göster</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoView');
            output.src = $('#Logo').val();
        });

        $('#Logo').on('change', function () {
            var output = document.getElementById('LogoView');
            output.src = $(this).val();
        });
    </script>

}